@using Microsoft.AspNetCore.Identity
@using IctApp.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<div class="flex items-center space-x-4 space-x-reverse">
    @if (SignInManager.IsSignedIn(User))
    {
        // If user is in the "Admin" role, show the Dashboard link
        @if (User.IsInRole("Admin"))
        {
            <a asp-area="Admin" asp-page="/Index" class="hidden sm:inline-block text-sm font-medium text-gray-500 hover:text-indigo-600 transition-colors" title="لوحة التحكم">
                <i class="fas fa-tachometer-alt mr-1"></i>
                <span>لوحة التحكم</span>
            </a>
        }

        <span class="hidden sm:inline-block text-gray-600 text-sm font-medium">مرحباً @UserManager.GetUserName(User)!</span>

        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button type="submit" class="px-4 py-2 text-sm font-medium text-indigo-600 bg-indigo-100 rounded-lg hover:bg-indigo-200 transition-colors">
                <i class="fas fa-sign-out-alt ml-1 sm:mr-1"></i>
                <span class="hidden sm:inline">تسجيل الخروج</span>
            </button>
        </form>
    }
    else
    {
        <a asp-area="Identity" asp-page="/Account/Register" class="hidden sm:inline-block text-sm font-medium text-gray-500 hover:text-indigo-600 transition-colors">إنشاء حساب</a>
        <a asp-area="Identity" asp-page="/Account/Login" class="px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg hover:bg-indigo-700 transition-colors shadow-sm">
            <i class="fas fa-sign-in-alt ml-2"></i>
            تسجيل الدخول
        </a>
    }
</div>

