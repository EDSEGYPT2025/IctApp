@page
@model IctApp.Pages.GlossaryModel
@{
    ViewData["Title"] = "مسرد المصطلحات";
}

<style>
    .term-card {
        transition: all 0.3s ease-in-out;
    }

        .term-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }
</style>

<div class="fade-in bg-gradient-to-br from-gray-50 to-indigo-100 py-12 min-h-screen">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Header -->
        <div class="text-center mb-10">
            <i class="fas fa-book-open text-5xl text-indigo-500"></i>
            <h1 class="mt-4 text-4xl font-extrabold text-gray-900 sm:text-5xl">مسرد المصطلحات التقنية</h1>
            <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500">
                مرجعك السريع لفهم جميع المفاهيم الأساسية في عالم تكنولوجيا المعلومات.
            </p>
        </div>

        <!-- Search Form -->
        <form class="mb-10" method="get">
            <div class="relative group">
                <input type="text"
                       class="w-full pl-20 pr-6 py-4 bg-white border-2 border-gray-200 rounded-full text-lg shadow-inner focus:ring-2 focus:ring-indigo-400 focus:border-indigo-400 transition-all"
                       placeholder="ابحث عن مصطلح..." asp-for="SearchTerm" value="@Model.SearchTerm">
                <button type="submit"
                        class="absolute inset-y-0 left-0 flex items-center justify-center w-16 h-full text-white bg-gradient-to-r from-indigo-600 to-blue-500 rounded-l-full shadow-md hover:from-indigo-700 hover:to-blue-600 transition-all duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <i class="fas fa-search transition-transform duration-300 group-hover:rotate-12"></i>
                </button>
            </div>
        </form>

        @if (Model.GlossaryTerms.Any())
        {
            <div class="grid md:grid-cols-2 gap-6">
                @foreach (var item in Model.GlossaryTerms)
                {
                    <div class="term-card bg-white rounded-xl shadow-lg overflow-hidden">
                        <div class="p-6">
                            <div class="flex items-center gap-4">
                                <div class="flex-shrink-0 bg-indigo-100 text-indigo-600 rounded-lg h-12 w-12 flex items-center justify-center">
                                    <i class="fas fa-tag"></i>
                                </div>
                                <h3 class="text-xl font-bold text-gray-900">@item.Term</h3>
                            </div>
                            <p class="mt-4 text-gray-600 leading-relaxed">
                                @item.Definition
                            </p>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center bg-white rounded-xl shadow-md p-12">
                <i class="fas fa-search text-5xl text-gray-400 mb-4"></i>
                <p class="text-xl font-semibold text-gray-700">لا توجد مصطلحات تطابق بحثك.</p>
                <p class="text-gray-500 mt-2">حاول استخدام كلمة بحث مختلفة.</p>
            </div>
        }
    </div>
</div>

