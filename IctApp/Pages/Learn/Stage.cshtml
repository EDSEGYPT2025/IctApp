@page "{stageId:int}"
@model IctApp.Pages.Learn.StageModel
@{
    ViewData["Title"] = Model.CurrentStage?.Title ?? "الصفوف الدراسية";
}

<div class="fade-in max-w-5xl mx-auto px-4">
    <div class="text-center mb-12">
        <i class="fas fa-layer-group text-6xl text-indigo-500"></i>
        <h1 class="mt-4 text-4xl font-extrabold text-gray-900 sm:text-5xl">@ViewData["Title"]</h1>
        <p class="mt-3 max-w-2xl mx-auto text-xl text-gray-500">
            اختر الصف الدراسي الذي تود البدء به.
        </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        @foreach (var grade in Model.Grades)
        {
            <a asp-page="/Learn/Grade" asp-route-gradeId="@grade.Id" class="group block p-8 bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2">
                <div class="flex items-center justify-center h-16 w-16 rounded-2xl bg-indigo-100 text-indigo-600 shadow-md group-hover:bg-indigo-600 group-hover:text-white transition-colors">
                    <i class="fas fa-chalkboard-teacher fa-2x"></i>
                </div>
                <h3 class="mt-6 text-2xl font-bold text-gray-900">@grade.Title</h3>
                <p class="mt-2 text-gray-500">عرض الوحدات الدراسية لهذا الصف.</p>
            </a>
        }
    </div>
</div>

