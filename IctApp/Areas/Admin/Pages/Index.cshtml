@page
@model IctApp.Areas.Admin.Pages.IndexModel
@{
    ViewData["Title"] = "لوحة التحكم";
}

<div class="space-y-8">
    <!-- Header -->
    <div>
        <h1 class="text-3xl font-bold text-gray-900">لوحة التحكم</h1>
        <p class="mt-1 text-lg text-gray-600">نظرة عامة على المنصة التعليمية.</p>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-4">
        <!-- Units Card -->
        <div class="bg-white overflow-hidden shadow-lg rounded-xl">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="h-12 w-12 rounded-md bg-indigo-500 text-white flex items-center justify-center">
                            <i class="fas fa-layer-group fa-lg"></i>
                        </div>
                    </div>
                    <div class="mr-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">
                                إجمالي الوحدات
                            </dt>
                            <dd>
                                <div class="text-2xl font-bold text-gray-900">@Model.TotalUnits</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lessons Card -->
        <div class="bg-white overflow-hidden shadow-lg rounded-xl">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="h-12 w-12 rounded-md bg-purple-500 text-white flex items-center justify-center">
                            <i class="fas fa-book-reader fa-lg"></i>
                        </div>
                    </div>
                    <div class="mr-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">
                                إجمالي الدروس
                            </dt>
                            <dd>
                                <div class="text-2xl font-bold text-gray-900">@Model.TotalLessons</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Questions Card -->
        <div class="bg-white overflow-hidden shadow-lg rounded-xl">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="h-12 w-12 rounded-md bg-green-500 text-white flex items-center justify-center">
                            <i class="fas fa-question-circle fa-lg"></i>
                        </div>
                    </div>
                    <div class="mr-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">
                                إجمالي الأسئلة
                            </dt>
                            <dd>
                                <div class="text-2xl font-bold text-gray-900">@Model.TotalQuestions</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

        <!-- Glossary Card -->
        <div class="bg-white overflow-hidden shadow-lg rounded-xl">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="h-12 w-12 rounded-md bg-yellow-500 text-white flex items-center justify-center">
                            <i class="fas fa-search fa-lg"></i>
                        </div>
                    </div>
                    <div class="mr-5 w-0 flex-1">
                        <dl>
                            <dt class="text-sm font-medium text-gray-500 truncate">
                                إجمالي المصطلحات
                            </dt>
                            <dd>
                                <div class="text-2xl font-bold text-gray-900">@Model.TotalGlossaryTerms</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Chart Section -->
    <div class="bg-white shadow-lg rounded-xl p-6">
        <h3 class="text-lg font-medium text-gray-900">توزيع الأسئلة على الوحدات</h3>
        <div class="mt-4 h-80">
            <canvas id="unitQuestionsChart"></canvas>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const ctx = document.getElementById('unitQuestionsChart').getContext('2d');
            const chartData = JSON.parse('@Html.Raw(Model.ChartDataJson)');

            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: chartData.labels,
                    datasets: [{
                        label: 'عدد الأسئلة',
                        data: chartData.data,
                        backgroundColor: 'rgba(79, 70, 229, 0.6)', // Indigo
                        borderColor: 'rgba(79, 70, 229, 1)',
                        borderWidth: 1,
                        borderRadius: 5
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                stepSize: 1
                            }
                        },
                        x: {
                             ticks: {
                                 callback: function(value, index, values) {
                                     // Truncate long labels
                                     const label = this.getLabelForValue(value);
                                     return label.length > 15 ? label.substring(0, 15) + '...' : label;
                                 }
                             }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                             callbacks: {
                                label: function(context) {
                                    return ` عدد الأسئلة: ${context.raw}`;
                                }
                            }
                        }
                    }
                }
            });
        });
    </script>
}

