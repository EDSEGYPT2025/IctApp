@page "{id:int}"
@model IctApp.Areas.Admin.Pages.Questions.DeleteModel
@{
    ViewData["Title"] = "حذف السؤال";
}

<div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold text-red-600 mb-6">تأكيد الحذف</h1>
    <h3 class="text-lg text-gray-700 mb-4">هل أنت متأكد أنك تريد حذف هذا السؤال؟</h3>

    <div class="bg-white p-8 rounded-xl shadow-md">
        <dl class="space-y-4">
            <div>
                <dt class="text-gray-500 font-semibold">نص السؤال</dt>
                <dd class="text-gray-900 mt-1">@Html.DisplayFor(model => model.Question.QuestionText)</dd>
            </div>
            <div>
                <dt class="text-gray-500 font-semibold">الوحدة</dt>
                <dd class="text-gray-900 mt-1">@Html.DisplayFor(model => model.Question.Unit.Title)</dd>
            </div>
        </dl>

        <form method="post" class="mt-6">
            <input type="hidden" asp-for="Question.Id" />
            <div class="flex items-center justify-between">
                <input type="submit" value="حذف" class="px-6 py-2 bg-red-600 text-white font-semibold rounded-lg shadow-md hover:bg-red-700 transition-colors cursor-pointer" />
                <a asp-page="./Index" class="text-gray-600 hover:text-indigo-600 font-semibold">العودة إلى القائمة</a>
            </div>
        </form>
    </div>
</div>
