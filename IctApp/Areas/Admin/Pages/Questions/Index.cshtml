@page
@model IctApp.Areas.Admin.Pages.Questions.IndexModel
@{
    ViewData["Title"] = "إدارة الأسئلة";
}

<div class="container mx-auto">
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">إدارة أسئلة الاختبارات</h1>
            <p class="text-gray-500 mt-1">عرض وتعديل أسئلة اختبارات الوحدات.</p>
        </div>
        <a asp-page="Create" class="px-6 py-2 bg-indigo-600 text-white font-semibold rounded-lg shadow-md hover:bg-indigo-700 transition-colors">
            <i class="fas fa-plus mr-2"></i> إضافة سؤال جديد
        </a>
    </div>

    @foreach (var group in Model.QuestionsByUnit)
    {
        <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-700 mb-4">@group.Key</h2>
            <div class="bg-white rounded-xl shadow-md overflow-hidden">
                <table class="min-w-full leading-normal">
                    <thead>
                        <tr>
                            <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider w-2/5">
                                السؤال
                            </th>
                            <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                الإجابة الصحيحة
                            </th>
                            <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-center text-xs font-semibold text-gray-600 uppercase tracking-wider">
                                الإجراءات
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var question in group)
                        {
                            <tr>
                                <td class="px-5 py-4 border-b border-gray-200 bg-white text-sm">
                                    <p class="text-gray-900 whitespace-no-wrap font-semibold">@question.QuestionText</p>
                                </td>
                                <td class="px-5 py-4 border-b border-gray-200 bg-white text-sm">
                                    <p class="text-green-700 bg-green-100 px-2 py-1 inline-block rounded-full">@question.Options.FirstOrDefault(o => o.IsCorrect)?.OptionText</p>
                                </td>
                                <td class="px-5 py-4 border-b border-gray-200 bg-white text-sm text-center">
                                    <a asp-page="./Edit" asp-route-id="@question.Id" class="text-indigo-600 hover:text-indigo-900 ml-4">تعديل</a>
                                    <a asp-page="./Delete" asp-route-id="@question.Id" class="text-red-600 hover:text-red-900">حذف</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>
