@page "{id:int}"
@model IctApp.Areas.Admin.Pages.Lessons.DeleteModel
@{
    ViewData["Title"] = "حذف الدرس";
}

<div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold text-red-600 mb-6">تأكيد الحذف</h1>
    <h3 class="text-lg text-gray-700 mb-4">هل أنت متأكد أنك تريد حذف هذا الدرس؟</h3>

    <div class="bg-white p-8 rounded-xl shadow-md">
        <dl class="grid grid-cols-3 gap-4">
            <dt class="col-span-1 text-gray-500 font-semibold">عنوان الدرس</dt>
            <dd class="col-span-2 text-gray-900">@Html.DisplayFor(model => model.Lesson.Title)</dd>

            <dt class="col-span-1 text-gray-500 font-semibold">الوحدة الدراسية</dt>
            <dd class="col-span-2 text-gray-900">@Html.DisplayFor(model => model.Lesson.Unit.Title)</dd>
        </dl>

        <form method="post" class="mt-6">
            <input type="hidden" asp-for="Lesson.Id" />
            <div class="flex items-center justify-between">
                <input type="submit" value="حذف" class="px-6 py-2 bg-red-600 text-white font-semibold rounded-lg shadow-md hover:bg-red-700 transition-colors cursor-pointer" />
                <a asp-page="./Index" class="text-gray-600 hover:text-indigo-600 font-semibold">العودة إلى القائمة</a>
            </div>
        </form>
    </div>
</div>
